---
import Time from '@/icons/Time.astro';
import Play from '@/icons/Play.astro';
import Pause from '@/icons/Pause.astro';
import { type Song } from '@/lib/data';

interface Props {
  songs: Song[]
}

const { songs } = Astro.props
---

<table class="table-auto text-left min-w-full divide-y divide-gray-500/20">
  <thead class="">
    <tr class="text-zinc-400 text-sm">
      <td class="px-4 py-2">#</td>
      <td class="px-4 py-2">Titulo</td>
      <td class="px-4 py-2">Album</td>
      <td class="px-4 py-2"><Time/></td>
    </tr>
  </thead>
  <tbody>
    {songs.map((song, index) => (
      <tr class="text-zinc-400 text-sm hover:bg-zinc-500/20 transition duration-200">
        <td class="px-4 py-2 rounded-l-md w-4">{index + 1}</td>
        <td class="px-4 py-2 flex gap-4">
          <picture class="aspect-square w-11 h-11 flex-none">
            <img
              src={song.image}
              alt={`Cover of ${song.title}`}
              class="object-cover w-full h-full rounded-md"
            />
          </picture>
          <div class="flex flex-col justify-center">
            <h3 class="text-white">{song.title}</h3>
            <span>{song?.artists.join(', ')}</span>
          </div>
        </td>
        <td class="px-4 py-2">{song.album}</td>
        <td class="px-4 py-2 rounded-r-md">{song.duration}</td>
      </tr>
    ))}
  </tbody>

</table>
